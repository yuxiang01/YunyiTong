<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yyt.reg.mapper.RegTagMapper">
    
    <resultMap type="RegTag" id="RegTagResult">
        <result property="tagId"    column="tag_id"    />
        <result property="title"    column="title"    />
    </resultMap>

    <sql id="selectRegTagVo">
        select tag_id, title from reg_tag
    </sql>

    <select id="selectRegTagList" parameterType="RegTag" resultMap="RegTagResult">
        <include refid="selectRegTagVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
        </where>
    </select>
    
    <select id="selectRegTagByTagId" parameterType="Long" resultMap="RegTagResult">
        <include refid="selectRegTagVo"/>
        where tag_id = #{tagId}
    </select>
        
    <insert id="insertRegTag" parameterType="RegTag" useGeneratedKeys="true" keyProperty="tagId">
        insert into reg_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
         </trim>
    </insert>

    <update id="updateRegTag" parameterType="RegTag">
        update reg_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
        </trim>
        where tag_id = #{tagId}
    </update>

    <delete id="deleteRegTagByTagId" parameterType="Long">
        delete from reg_tag where tag_id = #{tagId}
    </delete>

    <delete id="deleteRegTagByTagIds" parameterType="String">
        delete from reg_tag where tag_id in 
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>

    <select id="selAll" parameterType="String" resultType="String">
        select title from reg_tag where tag_id = #{tagId}
    </select>
</mapper>